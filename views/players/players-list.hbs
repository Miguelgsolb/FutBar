<div class="container mt-5">
    <h1>Plantilla</h1>
    <div class="row mt-5">

        {{#each player}}
        <div class="col-md-3">
            <article class="teams-card mb-5">
                <h4 class="text-center">{{name}}</h4>
                <hr>
                <img src="{{image}}" alt="logo">
            </article>
            <a href="/plantilla/detalle/{{../squad_id}}/{{id}}" class="btn btn-dark">Detalle</a>
            <a href="/equipos" class="btn btn-dark">Equipos</a>
        </div>
        {{/each}}

    </div>
</div>