<div class="container mb-4">
    <h1 class="text-center mt-5">Lista de Eventos</h1>
    <hr>
    <div class="row mt-4 text-center">
        {{#each userEvents}}
        <div class="col-md-3">
            <div class="card shadow-lg p-3 mb-5 bg-body rounded" style="width: 18rem;">
                <img src="{{imageUrl}}" class="card-img-top" alt="{{eventName}}">
                <div class="card-body">
                    <h2 class="card-title">{{name}}</h2>
                    <hr>
                    <h4>{{eventName}}</h4>
                    <p class="card-text">{{description}}</p>
                    <p>{{date}}</p>
                    <form action="/eventos/participar/{{id}}" method="POST">
                        <input type="submit" value="participar" class="btn btn-outline-success">
                    </form>
                    <hr>
                    <br>
                    {{#if ../isPresident}}
                    <a href="/eventos/editar/{{id}}" class="btn btn-outline-dark">Editar</a>

                    <form action="/eventos/eliminar/{{id}}" method="POST" style="display: inline">
                        <input type="submit" value="eliminar" class="btn btn-danger">
                    </form>
                    {{/if}}

                    {{#if isCurrentUser}}
                    {{#if ../isManager}}
                    <a href="/eventos/editar/{{id}}" class="btn btn-outline-dark">Editar</a>

                    <form action="/eventos/eliminar/{{id}}" method="POST" style="display: inline">
                        <input type="submit" value="eliminar" class="btn btn-danger">
                    </form>
                    {{/if}}
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>